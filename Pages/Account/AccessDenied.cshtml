@page
@model SocialGenius.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Accesso negato";
    Layout = "_LayoutNoNav";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <div class="display-1 text-danger mb-3">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                </div>
                <h1 class="display-5 mb-3">Accesso Negato</h1>
                <p class="lead mb-4">Non disponi dei permessi necessari per accedere a questa pagina.</p>
             

                <div class="d-grid gap-2 col-md-6 mx-auto">
                    <a href="/" class="btn btn-outline-primary">Torna alla Home</a>

                    <form asp-page="/Account/Logout" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link text-decoration-none">Esci e accedi con un altro account</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
